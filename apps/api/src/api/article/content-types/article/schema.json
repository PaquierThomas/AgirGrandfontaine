{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "maxLength": 80
    },
    "date": {
      "type": "date"
    },
    "read_time": {
      "type": "string"
    },
    "category": {
      "type": "customField",
      "customField": "plugin::multi-select.multi-select",
      "default": "[]",
      "options": [
        "urbanisme",
        "finance",
        "informations"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.media",
        "shared.paragraph",
        "shared.paragraph-subtitle",
        "shared.introduction"
      ]
    }
  }
}
