---
import { HStack } from "@styled-system/jsx";

interface Props {
  label: string;
  variant?: "default" | "colored" | "outlined" | "highlight";
}

const { label, variant = "default" } = Astro.props;
---

<HStack className={`tags tags-${variant}`}>
  <p>{label}</p>
</HStack>

<style>
  .tags {
    padding: 8px 16px;
    border-radius: 1000px;
    width: fit-content;
    gap: 6px;
    font-family: var(--police-tag);
    font-size: var(--tag-size);
    line-height: 18px;
    font-weight: 500;
  }

  /* Default variant */
  .tags-default {
    background-color: var(--color-bg);
    color: var(--color-primary);
  }

  /* Colored variant - pour les tags actifs dans les filtres */
  .tags-colored {
    background-color: var(--color-primary);
    color: #ffffff;
    border: 1px solid var(--color-primary);
    padding: 13px 19px 15px;
  }

  /* Outlined variant - pour les tags inactifs dans les filtres */
  .tags-outlined {
    background-color: transparent;
    border: 1px solid rgba(var(--color-primary-rgb), 0.08);
    color: var(--color-primary);
    padding: 13px 19px 15px;
  }

  /* Highlight variant - pour mettre en avant certaines informations */
  .tags-highlight {
    background: rgba(var(--color-primary-rgb), 0.03);
    color: var(--color-primary);
    border: 1px solid rgba(var(--color-primary-rgb), 0.08);
    padding: 20px 24px;
    border-radius: 16px;
    font-size: 16px;
  }
</style>