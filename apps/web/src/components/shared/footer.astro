---
import { HStack, VStack, Box } from "@styled-system/jsx";
import fetchApi from "../../lib/strapi";
import Logo from "./logo.astro";
---

<footer class="footer">
  <div class="footer-container">
    <!-- Logo centré -->
    <div class="footer-logo-wrapper">
      <Logo class="footer-logo" />
    </div>

    <!-- Navigation centrée -->
    <nav class="footer-nav">
      <a href="/">Accueil</a>
      <span class="separator">•</span>
      <a href="/blog">Actualités</a>
      <span class="separator">•</span>
      <a href="/contact">Contact</a>
    </nav>

    <!-- Social -->
    <div class="footer-social">
      <a href="https://facebook.com" target="_blank" rel="noopener" aria-label="Facebook">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>

    <!-- Copyright -->
    <div class="footer-copyright">
      <p>© 2025 · Tous droits réservés</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    padding: 64px 0 48px;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .footer-container {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1400px;
    padding: 0 40px;
    gap: 40px;
  }

  /* Logo */
  .footer-logo-wrapper {
    display: flex;
    justify-content: center;
  }

  .footer-logo {
    filter: brightness(0) invert(1);
    width: 56px;
    height: 56px;
    transition: transform 0.3s ease;
  }

  .footer-logo:hover {
    transform: scale(1.05);
  }

  /* Navigation horizontale */
  .footer-nav {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-nav a {
    font-size: 16px;
    font-weight: 500;
    color: var(--text-bg);
    text-decoration: none;
    font-family: var(--font-text);
    transition: opacity 0.3s ease;
    position: relative;
  }

  .footer-nav a:hover {
    opacity: 0.7;
  }

  .footer-nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--text-bg);
    transition: width 0.3s ease;
  }

  .footer-nav a:hover::after {
    width: 100%;
  }

  .separator {
    color: var(--text-bg);
    opacity: 0.4;
    font-size: 14px;
    user-select: none;
  }

  /* Social */
  .footer-social {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .footer-social a {
    color: var(--text-bg);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
  }

  .footer-social a:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  /* Copyright */
  .footer-copyright {
    text-align: center;
    width: 100%;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .footer-copyright p {
    font-size: 14px;
    color: var(--text-bg);
    opacity: 0.6;
    font-family: var(--font-text);
    letter-spacing: 0.5px;
  }

  /* Tablets (1024px et moins) */
  @media (max-width: 1024px) {
    .footer {
      padding: 56px 0 44px;
    }

    .footer-container {
      padding: 0 32px;
      gap: 36px;
    }

    .footer-nav {
      gap: 18px;
    }

    .footer-nav a {
      font-size: 15px;
    }
  }

  /* Tablets small (768px et moins) */
  @media (max-width: 768px) {
    .footer {
      padding: 48px 0 40px;
    }

    .footer-container {
      padding: 0 24px;
      gap: 32px;
    }

    .footer-logo {
      width: 48px;
      height: 48px;
    }

    .footer-nav {
      gap: 16px;
    }

    .footer-nav a {
      font-size: 14px;
    }

    .separator {
      font-size: 12px;
    }

    .footer-copyright {
      padding-top: 28px;
    }
  }

  /* Mobile (640px et moins) */
  @media (max-width: 640px) {
    .footer {
      padding: 40px 0 32px;
    }

    .footer-container {
      padding: 0 20px;
      gap: 28px;
    }

    /* Navigation verticale sur mobile */
    .footer-nav {
      flex-direction: column;
      gap: 12px;
    }

    .separator {
      display: none;
    }

    .footer-nav a {
      font-size: 15px;
    }

    .footer-social a {
      width: 36px;
      height: 36px;
    }

    .footer-copyright p {
      font-size: 13px;
    }
  }

  /* Small mobile (480px et moins) */
  @media (max-width: 480px) {
    .footer {
      padding: 36px 0 28px;
    }

    .footer-container {
      gap: 24px;
    }

    .footer-logo {
      width: 44px;
      height: 44px;
    }

    .footer-nav a {
      font-size: 14px;
    }

    .footer-copyright {
      padding-top: 24px;
    }
  }
</style>