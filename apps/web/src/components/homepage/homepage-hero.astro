---
import { HStack, VStack } from "@styled-system/jsx";
import Button from "src/components/shared/button.astro";
import fetchApi from "../../lib/strapi";

const videos = await fetchApi({
  endpoint: "videos",
  wrappedByKey: "data",
});

const sortedVideos = videos.sort((a, b) => {
  return new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime();
});

const latestVideo = sortedVideos[0];

console.log("Vidéo la plus récente:", {
  id: latestVideo?.id,
  title: latestVideo?.Title,
  createdAt: latestVideo?.createdAt
});

function getYouTubeVideoId(url: string): string | null {
  if (!url) return null;
  const watchMatch = url.match(/[?&]v=([^&]+)/);
  if (watchMatch) return watchMatch[1];
  const shortMatch = url.match(/youtu\.be\/([^?]+)/);
  if (shortMatch) return shortMatch[1];
  const embedMatch = url.match(/embed\/([^?]+)/);
  if (embedMatch) return embedMatch[1];
  return null;
}

const videoId = latestVideo ? getYouTubeVideoId(latestVideo.lien) : null;
---

<section class="discover-section">
  <div class="content-wrapper">
    <div class="left-content">
      <h2>Notre nouvelle sortie</h2>
      <div class="left-main">
        <h1 class="title">{latestVideo?.Title || "Nos Vidéos"}</h1>
        <p class="description">
          {latestVideo?.Description || "Découvrez nos dernières vidéos"}
        </p>
        <HStack className="button-group">
          {videoId && (
            <Button
              variant="filled"
              target="_blank"
              href={latestVideo.lien}
            >
              Voir sur YouTube
            </Button>
          )}
        </HStack>
      </div>
    </div>
    <div class="right-content">
      {videoId ? (
        <div class="video-container">
          <iframe
            src={`https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1`}
            title={latestVideo.Title}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      ) : (
        <div class="video-placeholder">
          <p>Aucune vidéo disponible pour le moment</p>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .discover-section {
    min-height: 82vh;
    padding: 60px 80px;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    background-color: var(--color-bg);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    display: flex;
    align-items: center;
    max-width: 1400px;
    width: 100%;
    gap: 80px;
  }

  .left-content {
    flex: 0 0 40%;
    display: flex;
    flex-direction: column;
    gap: 0;
    align-self: stretch;

    h2 {
      font-family: var(--font-text);
      font-size: var(--size-citation-intro);
      font-weight: 700;
      color: var(--color-primary);
      text-decoration: underline;
      padding: 15px 0;
    }
  }

  .left-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 32px;
    align-items: flex-start;
  }

  .right-content {
    flex: 1;
    min-height: 500px;
  }

  .title {
    font-family: var(--font-titre);
    font-size: var(--size-title);
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-primary);
    margin: 0;
  }

  .description {
    font-family: var(--font-text);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.7;
    color: var(--color-text);
    max-width: 520px;
    margin: 0;
  }

  .button-group {
    gap: 16px;
    flex-wrap: wrap;
  }

  .video-container {
    width: 100%;
    height: 100%;
    min-height: 500px;
    border-radius: 32px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .video-placeholder {
    width: 100%;
    height: 100%;
    min-height: 500px;
    border-radius: 32px;
    background: var(--color-surface-variant, #f5f5f5);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary, #666);
  }

  /* Tablet - 1024px */
  @media (max-width: 1024px) {
    .discover-section {
      padding: 80px 40px;
    }

    .content-wrapper {
      gap: 60px;
    }

    .left-content {
      flex: 0 0 45%;
    }

    .title {
      font-size: clamp(32px, 5vw, var(--size-title));
    }

    .description {
      font-size: 15px;
    }

    .right-content {
      min-height: 450px;
    }

    .video-container,
    .video-placeholder {
      min-height: 450px;
    }
  }

  /* Tablet Small - 768px */
  @media (max-width: 768px) {
    .discover-section {
      padding: 60px 24px;
      min-height: auto;
    }

    .content-wrapper {
      flex-direction: column;
      gap: 40px;
    }

    .left-content {
      flex: 1;
      width: 100%;
      align-self: auto;

      h2 {
        text-align: center;
        width: 100%;
      }
    }

    .left-main {
      align-items: center;
      text-align: center;
    }

    .right-content {
      width: 100%;
      min-height: 300px;
    }

    .title {
      font-size: clamp(28px, 6vw, 42px);
    }

    .description {
      font-size: 15px;
      max-width: 100%;
    }

    .button-group {
      justify-content: center;
      width: 100%;
    }

    .video-container,
    .video-placeholder {
      min-height: 300px;
      border-radius: 20px;
    }
  }

  /* Mobile - 480px */
  @media (max-width: 480px) {
    .discover-section {
      padding: 50px 16px;
    }

    .content-wrapper {
      gap: 32px;
    }

    .left-content {
      h2 {
        text-align: left;
      }
    }

    .left-main {
      align-items: flex-start;
      text-align: left;
      gap: 20px;
    }

    .title {
      font-size: clamp(24px, 7vw, 32px);
    }

    .description {
      font-size: 14px;
      line-height: 1.6;
    }

    .button-group {
      gap: 12px;
      flex-direction: column;
      width: 100%;
    }

    .button-group :global(a),
    .button-group :global(button) {
      width: 100%;
      text-align: center;
    }

    .right-content {
      min-height: 250px;
    }

    .video-container,
    .video-placeholder {
      min-height: 250px;
      border-radius: 16px;
    }
  }

  /* Mobile Small - 360px */
  @media (max-width: 360px) {
    .title {
      font-size: 22px;
    }

    .description {
      font-size: 13px;
    }

    .right-content {
      min-height: 200px;
    }

    .video-container,
    .video-placeholder {
      min-height: 200px;
    }
  }
</style>