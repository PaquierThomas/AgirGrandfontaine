---
import { Box } from "@styled-system/jsx";
// Image al√©atoire from Unsplash
const imageUrl = `https://images.unsplash.com/photo-1466096115517-bceecbfb6fde?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D`;
---
<Box className="image-container">
  <img src={imageUrl} alt="Contact visual" />
</Box>

<style>
  .image-container {
    position: relative;
    width: 600px;
    height: 600px;
    margin: 0 auto;
    border-radius: 32px;
    overflow: hidden;
    background: rgba(var(--color-primary-rgb), 0.03);
  }
  
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  
  /* Tablets */
  @media (max-width: 1024px) {
    .image-container {
      width: 500px;
      height: 500px;
      border-radius: 28px;
    }
  }
  
  /* Mobile devices */
  @media (max-width: 768px) {
    .image-container {
      width: 100%;
      height: 400px;
      border-radius: 24px;
    }
  }
  
  /* Small mobile */
  @media (max-width: 480px) {
    .image-container {
      height: 300px;
      border-radius: 20px;
    }
  }
</style>