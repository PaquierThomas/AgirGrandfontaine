---
import { VStack } from "@styled-system/jsx";
interface Props {
  category: string;
  readTime: string;
  date: string;
}
const { category, readTime, date } = Astro.props;
---

<aside class="article-sidebar">
  <a href="/blog" class="back-link">← Retour au blog</a>
  <VStack className="article-meta">
    <VStack>
      <p class="article-title-tag">Catégorie :</p>
      <span class="article-tag">{category}</span>
    </VStack>
    <VStack className="article-meta-tag">
      <p class="article-title-tag">Temps de lecture :</p>
      <span class="article-tag">{readTime}</span>
    </VStack>
    <VStack>
      <p class="article-title-tag">Publié le :</p>
      <span class="article-tag">{date}</span>
    </VStack>
  </VStack>
</aside>

<style>
  .article-sidebar {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 16px;
    position: relative;
    height: fit-content;
    background: var(--color-surface, #f9f9f9);
    border-radius: 8px;
  }

  .back-link {
    text-decoration: none;
    color: var(--color-primary);
    transition: opacity 0.2s;
    font-family: var(--font-text);
    font-size: 14px;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  .article-meta {
    gap: 16px;
    align-items: flex-start;
    font-family: var(--font-text);
    flex-direction: row;
    flex-wrap: wrap;
  }

  .article-meta > div {
    gap: 4px;
    align-items: flex-start;
    flex: 1 1 auto;
    min-width: 120px;
  }

  .article-title-tag {
    font-size: 12px;
    color: rgba(var(--color-primary-rgb), 0.7);
  }

  .article-tag {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-primary);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .article-sidebar {
      gap: 24px;
      padding: 20px;
    }

    .back-link {
      font-size: 15px;
    }

    .article-meta {
      gap: 20px;
      flex-direction: column;
    }

    .article-meta > div {
      gap: 5px;
      min-width: unset;
    }

    .article-title-tag {
      font-size: 13px;
    }

    .article-tag {
      font-size: 16px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .article-sidebar {
      gap: 28px;
      padding-top: 20px;
      padding-left: 0;
      padding-right: 0;
      position: sticky;
      top: 100px;
      align-self: start;
      background: transparent;
      border-radius: 0;
    }

    .back-link {
      font-size: 16px;
    }

    .article-meta {
      gap: 22px;
    }

    .article-meta > div {
      gap: 6px;
    }

    .article-title-tag {
      font-size: 14px;
    }

    .article-tag {
      font-size: 17px;
    }
  }

  /* Large Desktop */
  @media (min-width: 1440px) {
    .article-sidebar {
      gap: 32px;
    }

    .article-meta {
      gap: 24px;
    }

    .article-tag {
      font-size: 18px;
    }
  }
</style>
