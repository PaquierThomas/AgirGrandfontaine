---
import { Stack } from "@styled-system/jsx";
import fetchApi from "../../lib/strapi";
import type ActualitiesSection from "src/interfaces/views/actualities-section";
import type Actualities from "src/interfaces/actualities";

// Récupérer le titre de la page
const pageData = await fetchApi<ActualitiesSection>({
  endpoint: "actualites-page-accueil",
  wrappedByKey: "data",
});

// Récupérer toutes les actualités
const actualitiesData = await fetchApi<Actualities>({
  endpoint: "actualites",
  wrappedByKey: "data",
});

// Trier par date décroissante et prendre les 5 plus récentes
const recentEvents = (actualitiesData || [])
  .map(event => ({
    ...event,
    sortDate: new Date(event.date)
  }))
  .sort((a, b) => b.sortDate.getTime() - a.sortDate.getTime())
  .slice(0, 5);

// Grouper par mois
const timelineEvents = recentEvents.reduce((acc, event) => {
  const monthNames = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", 
                      "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"];
  const month = monthNames[event.sortDate.getMonth()];
  
  const existingMonth = acc.find(item => item.year === month);
  if (existingMonth) {
    existingMonth.events.push(event);
  } else {
    acc.push({
      year: month,
      events: [event]
    });
  }
  
  return acc;
}, []);
---

<Stack className="faq-container full-width-bg">
  <Stack className="container">
    <Stack className="title-section">
      <h2>{pageData?.title}</h2>
    </Stack>
    
    <div class="timeline-section">
      {timelineEvents.map((yearSection) => (
        <section class="timeline-year">
          <div class="year-title">{yearSection.year}</div>
          <div class="year-content">
            {yearSection.events.map((event, index) => (
              <article class="timeline-item">
                <aside class="timeline-line">
                  <div class="dot"></div>
                  {index < yearSection.events.length - 1 && <div class="line"></div>}
                </aside>
                <main class="timeline-content">
                  <div class="title-row">
                    {event.link ? (
                      <a href={event.link} class="timeline-title-link">
                        <h3>{event.title}</h3>
                      </a>
                    ) : (
                      <h3>{event.title}</h3>
                    )}
                    <span class="event-date">
                      {event.sortDate.toLocaleDateString('fr-FR')}
                    </span>
                  </div>
                  <p set:html={event.description}></p>
                </main>
              </article>
            ))}
          </div>
        </section>
      ))}
    </div>
  </Stack>
</Stack>

<style>
  .faq-container {
    background-color: var(--color-bg);
    padding: 240px 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 0.6fr 1fr;
    gap: 80px;
    align-items: flex-start;
  }

  .title-section h2 {
    font-size: var(--size-title);
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-primary);
    font-family: var(--font-titre);
    position: sticky;
    top: 120px;
  }

  /* Timeline Styles */
  .timeline-section {
    display: flex;
    flex-direction: column;
  }

  .timeline-year {
    display: flex;
    align-items: flex-start;
    gap: 30px;
    margin-bottom: 40px;
  }

  .timeline-year:last-child {
    margin-bottom: 0;
  }

  .year-title {
    font-size: 48px;
    font-weight: 700;
    font-family: var(--font-titre);
    color: var(--color-primary);
    position: sticky;
    top: 120px;
    width: 200px;
    flex-shrink: 0;
    line-height: 1.2;
  }

  .year-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .timeline-item {
    display: flex;
    gap: 24px;
    width: 100%;
  }

  .timeline-line {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 8px;
  }

  .dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: var(--color-primary);
    flex-shrink: 0;
  }

  .line {
    flex-grow: 1;
    margin: 12px 0;
    width: 3px;
    min-height: 40px;
    background-color: var(--color-primary);
    opacity: 0.3;
  }

  .timeline-content {
    padding-bottom: 32px;
    flex: 1;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 8px;
  }

  .timeline-content h3 {
    font-family: var(--font-titre);
    font-size: 24px;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
    line-height: 1.3;
  }

  .timeline-title-link {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }

  .timeline-title-link:hover {
    opacity: 0.7;
  }

  .timeline-title-link h3 {
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
  }

  .event-date {
    font-family: var(--font-text);
    font-size: 16px;
    font-weight: 500;
    color: var(--color-text);
    opacity: 0.7;
    white-space: nowrap;
  }

  .timeline-content p {
    font-family: var(--font-text);
    font-size: 16px;
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }

  .timeline-link {
    color: var(--color-primary);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: opacity 0.2s ease;
  }

  .timeline-link:hover {
    opacity: 0.7;
  }

  /* Tablet Landscape */
  @media (max-width: 1024px) {
    .faq-container {
      padding: 160px 0;
    }

    .container {
      gap: 60px;
      padding: 0 30px;
    }

    .title-section h2 {
      font-size: 56px;
      top: 100px;
    }

    .year-title {
      font-size: 40px;
      top: 100px;
      width: 100px;
      flex-shrink: 0;
    }

    .timeline-content h3 {
      font-size: 20px;
    }

    .event-date {
      font-size: 15px;
    }

    .timeline-content p {
      font-size: 15px;
    }
  }

  /* Tablet */
  @media (max-width: 768px) {
    .faq-container {
      padding: 120px 0;
    }

    .container {
      grid-template-columns: 1fr;
      gap: 60px;
      padding: 0 20px;
    }

    .title-section h2 {
      font-size: 48px;
      position: relative;
      top: auto;
      text-align: center;
    }

    .year-title {
      font-size: 36px;
      position: relative;
      top: auto;
      width: 90px;
      flex-shrink: 0;
    }

    .timeline-item {
      gap: 20px;
    }

    .title-row {
      gap: 12px;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .faq-container {
      padding: 80px 0;
    }

    .container {
      gap: 48px;
      padding: 0 16px;
    }

    .title-section h2 {
      font-size: 36px;
    }

    .timeline-year {
      gap: 16px;
      margin-bottom: 32px;
    }

    .year-title {
      font-size: 28px;
      width: 70px;
      flex-shrink: 0;
    }

    .timeline-item {
      gap: 16px;
    }

    .dot {
      width: 12px;
      height: 12px;
    }

    .line {
      width: 2px;
      min-height: 30px;
      margin: 8px 0;
    }

    .timeline-content {
      padding-bottom: 24px;
    }

    .title-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
    }

    .timeline-content h3 {
      font-size: 18px;
    }

    .event-date {
      font-size: 14px;
    }

    .timeline-content p {
      font-size: 14px;
    }
  }

  /* Small Mobile */
  @media (max-width: 375px) {
    .faq-container {
      padding: 60px 0;
    }

    .title-section h2 {
      font-size: 32px;
    }

    .year-title {
      font-size: 24px;
      width: 60px;
      flex-shrink: 0;
    }

    .timeline-content h3 {
      font-size: 16px;
    }

    .event-date {
      font-size: 13px;
    }

    .timeline-content p {
      font-size: 13px;
    }
  }
</style>