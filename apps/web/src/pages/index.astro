---
import "../index.css";
import Layout from "src/layouts/Layout.astro";
import "../styles/global.css";
import fetchApi from "../lib/strapi";
import HomepageHero from "src/components/homepage/homepage-hero.astro";
import type Dog from "../../src/interfaces/dog";
import HomepageBlogSnippet from "src/components/homepage/homepage-blog-snippet.astro";
import HomepageNews from "src/components/homepage/Homepage-News.astro";
import HomepageAbout from "src/components/homepage/homepage-about.astro";

const vedettes = await fetchApi<Dog[]>({
  endpoint: "dogs",
  wrappedByKey: "data",
  query: {
    populate: "all",
  },
});
---
<Layout title="Page d'accueil">
  <HomepageHero />
  <HomepageAbout />
  <HomepageNews/>
  <HomepageBlogSnippet />
</Layout>
